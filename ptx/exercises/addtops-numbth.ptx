  <exercise permid="Nyg">
 	 	<webwork>
    <statement>
      <p permid="JcI">
        Let <m>a</m>, <m>b</m>, <m>c</m>, and <m>n</m> be integers.
        Prove that if <m>a \equiv b \pmod{n}</m> and <m>c \equiv d \pmod{n}</m>,
        then <m>a-c \equiv b-d \pmod{n}</m>.
      </p>
    
 	<p><var form="essay"/></p>
 	</statement>
    <solution permid="jgk">

      <proof permid="Pnt">
        <p permid="fQf">
          Assume <m>a \equiv b \pmod n</m> and <m>c \equiv d \pmod n</m>.
          This means <m>a = b + kn</m> and
          <m>c = d + jn</m> for some integers <m>k</m> and <m>j</m>.
          Consider <m>a-c</m>.
          We have:
          <me permid="aaT">
            a-c = b+kn - (d+jn) = b-d + (k-j)n
          </me>.
        </p>

        <p permid="LXo">
          In other words,
          <m>a-c</m> is <m>b-d</m> more than some multiple of <m>n</m>,
          so <m>a-c \equiv b-d \pmod n</m>.
        </p>
      </proof>

    </solution>
  </webwork>
 	</exercise>

  <exercise permid="tFp">
 	 	<webwork>
    <statement>
      <p permid="pjR">
        Find the remainder of <m>3^{456}</m> when divided by

      <ol cols="4" permid="EOo">
        <li permid="dqY">
          <p permid="eaS">
            2.
          </p>
        </li>

        <li permid="Jyh">
          <p permid="Kib">
            5.
          </p>
        </li>

        <li permid="pFq">
          <p permid="qpk">
            7.
          </p>
        </li>

        <li permid="VMz">
          <p permid="Wwt">
            9.
          </p>
        </li>
      </ol>
    </p>
    
 	<p><var form="essay"/></p>
 	</statement>
    <solution permid="vuC">
      <p>
        <ol permid="glE">
          <li permid="BTI"><m>3^{456} \equiv 1^{456} = 1 \pmod 2</m>.</li>
  
          <li permid="iaR">
            <m>3^{456} = 9^{228} \equiv (-1)^{228} = 1 \pmod{5}</m>.
          </li>
  
          <li permid="Oia">
            <m>3^{456} = 9^{228} \equiv 2^{228} = 8^{76} \equiv 1^{76} = 1 \pmod 7</m>.
          </li>
  
          <li permid="upj">
            <m>3^{456} = 9^{228} \equiv 0^{228} = 0 \pmod{9}</m>.
          </li>
        </ol>
      </p>
    </solution>
  </webwork>
 	</exercise>
  
